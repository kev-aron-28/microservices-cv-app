<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil <%= cv.name %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <header class="my-5 text-center">
            <div class="d-flex justify-content-between align-items-center">
                <h1>Detalle del CV</h1>
                <div>
                    <a href="/feed" class="btn btn-secondary">Feed</a>
                    <a href="/logout" class="btn btn-danger ml-2">Logout</a>
                    <a href="/update/<%=cv.id %>">Actualizar CV</a>
                </div>
            </div>
        </header>
        
        <section class="my-5">
            <h2><%= cv.name %></h2>
            <p><strong>Teléfono:</strong> <%= cv.phone %></p>
            <p><strong>Email:</strong> <%= cv.email %></p>
            <p><strong>Descripción:</strong> <%= cv.description %></p>
            
            <h3>Habilidades</h3>
            <ul>
                <% Object.keys(cv.skills).forEach(key => { %>
                    <li><strong><%= key %>:</strong> <%= cv.skills[key] %></li>
                <% }); %>
            </ul>
            
            <h3>Historial Laboral</h3>
            <ul>
                <% Object.keys(cv.workHistory).forEach(key => { %>
                    <li><strong><%= key %>:</strong> <%= cv.workHistory[key] %></li>
                <% }); %>
            </ul>
            
            <h3>Educación</h3>
            <ul>
                <% Object.keys(cv.education).forEach(key => { %>
                    <li><strong><%= key %>:</strong> <%= cv.education[key] %></li>
                <% }); %>
            </ul>
        </section>

        <h3>Empresas Conectadas</h3>
        <ul class="list-group" id="connectedUsersList">
            <% connectedEmployers.forEach(user => { %>
                <li class="list-group-item">
                    <h5><%= user.employer.companyName %></h5>
                    <p><strong>Industria:</strong> <%= user.employer.industry %></p>
                    <p><strong>Descripción:</strong> <%= user.employer.description %></p>
                </li>
            <% }); %>
        </ul>
        
        <div class="text-center my-5">
            <a href="http://localhost:3001/pdf/<%=cv.id%>.pdf" class="btn btn-primary" target="_blank">Ver CV en PDF</a>
        </div>
    </div>

    <footer class="text-center py-4">
        <p>&copy; 2024 Promociona tu CV. Todos los derechos reservados.</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
